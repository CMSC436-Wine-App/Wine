<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/purchase_item"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/purchase_name"
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:layout_marginRight="10dp"
        android:textColor="#000000"
        android:text="Stupid Wine Name." />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/purchase_type"
        android:layout_toRightOf="@+id/purchase_name"
        android:textColor="#000000"
        android:text="Bottle" />

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:id="@+id/purchase_price"
        android:textColor="#000000"
        android:layout_toRightOf="@+id/purchase_type"
        android:layout_alignParentEnd="true"
        android:text="Price" />

</RelativeLayout>